if [[ $(command -v needrestart 2>/dev/null) && $(command -v grep 2>/dev/null) && $(command -v reboot 2>/dev/null) ]]
then
    DEBIAN_FRONTEND="noninteractive"
    need_reboot=$(echo | $(command -v needrestart) -vnk 2>/dev/null | $(command -v grep) "Pending kernel upgrade")

    if [[ -n "${need_reboot}" ]]
    then
        echo -e "\e[01;31mpending kernel upgrade:\e[0m \e[01;31;5ma reboot is required to use a newly installed kernel!\e[0m \e[01;31m(execute as root: $(command -v reboot))\e[0m"
    fi
else
    echo -e "\e[01;31mcould not find command 'needrestart', 'grep' or 'reboot'.\e[0m"
    exit 1
fi
