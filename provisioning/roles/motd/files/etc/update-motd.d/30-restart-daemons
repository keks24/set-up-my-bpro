DEBIAN_FRONTEND="noninteractive"
if [[ $(command -v needrestart 2>/dev/null) ]]
then
    restart_daemon_count=$($(command -v needrestart) -vnlr l 2>/dev/null | $(command -v grep) -c " restart ")

    if (( ${restart_daemon_count} > 0 ))
    then
        echo -e "\e[01;31;5m[${restart_daemon_count}] daemons are still using old libraries and need to be restarted!\e[0m \e[01;31m(execute as root: $(command -v needrestart))\e[0m"
    fi
else
    echo -e "\e[01;31mcould not find command 'needrestart'.\e[0m"
    exit 1
fi
